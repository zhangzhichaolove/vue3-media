{
  "name": "@peakchao/react-media",
  "version": "0.0.1",
  "description": "A beautiful React media player component library with video and audio players",
  "type": "module",
  "sideEffects": [
    "dist/**/*.css"
  ],
  "main": "./dist/react-media.umd.cjs",
  "module": "./dist/react-media.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/react-media.js",
      "require": "./dist/react-media.umd.cjs"
    },
    "./style": {
      "types": "./dist/types/style.d.ts",
      "import": "./dist/react-media.css",
      "require": "./dist/react-media.css",
      "default": "./dist/react-media.css"
    },
    "./style.css": "./dist/react-media.css",
    "./*": "./*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "login": "pnpm login --registry https://registry.npmjs.org",
    "login:legacy": "pnpm login --auth-type=legacy --registry https://registry.npmjs.org",
    "release": "pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "release:patch": "pnpm version patch && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "release:minor": "pnpm version minor && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "release:major": "pnpm version major && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org"
  },
  "keywords": [
    "react",
    "video-player",
    "audio-player",
    "media",
    "component-library",
    "typescript"
  ],
  "author": "peakchao",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "~5.6.0",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  }
}
