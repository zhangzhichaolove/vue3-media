{
  "name": "@peakchao/vue3-media",
  "version": "0.0.2",
  "description": "A beautiful Vue 3 media player component library with video and audio players",
  "type": "module",
  "sideEffects": [
    "dist/**/*.css"
  ],
  "main": "./dist/vue3-media.umd.cjs",
  "module": "./dist/vue3-media.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/vue3-media.js",
      "require": "./dist/vue3-media.umd.cjs"
    },
    "./style": {
      "types": "./dist/types/style.d.ts",
      "import": "./dist/vue3-media.css",
      "require": "./dist/vue3-media.css",
      "default": "./dist/vue3-media.css"
    },
    "./style.css": "./dist/vue3-media.css",
    "./*": "./*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "type-check": "vue-tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "login": "pnpm login --registry https://registry.npmjs.org",
    "login:legacy": "pnpm login --auth-type=legacy --registry https://registry.npmjs.org",
    "release": "pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "release:patch": "pnpm version patch && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "release:minor": "pnpm version minor && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "release:major": "pnpm version major && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org"
  },
  "keywords": [
    "vue3",
    "video-player",
    "audio-player",
    "media",
    "component-library",
    "typescript"
  ],
  "author": "peakchao",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "typescript": "~5.6.0",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  }
}
